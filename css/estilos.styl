tamanio_fuente = 16px
naranja = #D5BB47
blanco_oscuro = #EEEEEE
blanco_claro = #FFFFFF

body
    font-size tamanio_fuente
    background-color blanco_oscuro
    
h1, h2, figure, p
    margin 0
    padding 0

.header
    background-color naranja
    font-size 1.2em
    
    h1
        color blanco_claro
        font-weight normal
        padding 0.2em 0em 0.2em 0.5em
        
        span
            color red
            font-size 1.2em
            font-weight bold
    
.articulos
    margin 1em 1.5em 1em 1.5em
    padding 0
    
.articulo
    background-color blanco_claro
    box-shadow 2px 2px 6px rgba(0,0,0,0.5)
    padding 1em
    margin 1em 0em
    width 94%
    
    h2
        text-align right
        color #FF8084
        
.categoria
    color #252525
    margin-top 1em
    
    span
        font-weight bold
    
.foto , .precio
    display inline-block
    text-align center
    width 46%
    
    img
        height 89px
    
.precio
    float right
    color #252525
    margin-top 0.5em
    margin-right 0.3em
    font-size 2.9em
    
@media (min-width: 550px)
    .articulo
        display inline-block
        width 42%
        
    .articulo:nth-child(odd)
            margin-right 0.5em
        
@media (min-width: 900px)
    .articulo
        width 25%
        
    .articulo:nth-child(even)
            margin-right 0.5em